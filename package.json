{
  "name": "monsters-of-chopa-sipa",
  "version": "1.0.0",
  "description": "Telegram bot template in TypeScript ",
  "main": "build/index.js",
  "scripts": {
    "compile": "tsc",
    "build": "npm run compile && npm run copyFiles",
    "bg:start": "npm run build && pm2 start build/index.js --name monsters",
    "bg:restart": "npm run build && pm2 restart monsters",
    "bg:logs": "pm2 logs monsters --lines 1000 -f",
    "start": "npm run build && node .",
    "pretty": "npx prettier --write src",
    "copyFiles": "cp -r src/locales build"
  },
  "keywords": [
    "telegram",
    "bot",
    "monsters",
    "chopa",
    "sipa",
    "game",
    "text game",
    "typescript"
  ],
  "author": "ExposedCat",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@grammyjs/i18n": "^0.5.1",
    "dotenv": "^16.0.1",
    "grammy": "^1.10.1",
    "mongodb": "^4.9.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.4",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-github": "^4.10.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-sonarjs": "^0.21.0",
    "prettier": "^3.0.3",
    "typescript": "^4.7.4"
  },
  "type": "module",
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  }
}
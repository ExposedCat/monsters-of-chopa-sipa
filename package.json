{
  "name": "ts-tg-bot",
  "version": "1.0.0",
  "description": "Telegram bot template in TypeScript ",
  "main": "build/index.js",
  "scripts": {
    "compile": "tsc",
    "prepare": "npm run compile && npm run copyFiles",
    "bg:start": "npm run prepare && pm2 start build/index.js --name monsters",
    "bg:restart": "npm run prepare && pm2 restart monsters",
    "bg:logs": "pm2 logs monsters --lines 1000 -f",
    "start": "npm run prepare && node .",
    "pretty": "npx prettier --write src",
    "copyFiles": "cp -r src/locales build"
  },
  "keywords": [
    "telegram",
    "bot",
    "monsters",
    "chopa",
    "sipa",
    "game",
    "text game",
    "typescript"
  ],
  "author": "ExposedCat",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@grammyjs/i18n": "^0.5.1",
    "dotenv": "^16.0.1",
    "grammy": "^1.10.1",
    "mongodb": "^4.9.1"
  },
  "devDependencies": {
    "@types/node": "^18.7.4",
    "@types/pg": "^8.6.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "type": "module",
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  }
}